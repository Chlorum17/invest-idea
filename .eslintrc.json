{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "impliedStrict": false
    }
  },
  "rules": {
    "strict": ["error", "global"],
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "no-useless-constructor": "off"
  }
}
